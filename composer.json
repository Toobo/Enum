{
    "name": "toobo/enum",
    "description": "Single-class, Rust-inspired enum implementation for PHP",
    "keywords":  ["enum", "enumeration", "enumerable", "algebraic data types", "pattern matching"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Giuseppe Mazzapica",
            "email": "giuseppe.mazzapica@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "3.2.*",
        "inpsyde/php-coding-standards": "0.*",
        "phan/phan": "^1"
    },
    "autoload": {
        "psr-4": {
            "Toobo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Toobo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "qa": [
            "sh ./vendor/bin/phpcs",
            "sh ./vendor/bin/phan",
            "sh ./vendor/bin/phpunit"
        ]
    }
}
